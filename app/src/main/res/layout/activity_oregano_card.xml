<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="25dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageButton
                    android:id="@+id/backBtnOregano"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_arrow_back"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/back" />

                <TextView
                    android:id="@+id/homeBtnOregano"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center|end"
                    android:padding="8dp"
                    android:text="@string/home"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="0dp">

                <ImageView
                    android:id="@+id/oreganoImage"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:src="@drawable/oregano"
                    android:contentDescription="@string/oregano"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/oreganoTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="serif"
                    android:text="Oregano"
                    android:textColor="#000000"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/oreganoDescription"
                    android:text="@string/a_pungent_slightly_bitter_and_peppery_herb_essential_for_seasoning_classic_mediterranean_and_mexican_dishes_like_pizza_sauce_grilled_meats_and_chili"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="24dp"/>

                <TextView
                    android:id="@+id/saveOreganoBtn"
                    android:text="@string/save_herb"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="8dp"
                    android:textColor="#000000"/>
            </LinearLayout>

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/recipeFragmentOregano"
                android:name="com.example.plantergroupproj.RecipeFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </ScrollView>