<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/recipeFragmentParsley"
        android:name="com.example.plantergroupproj.RecipeFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="560dp" />

    <TextView
        android:id="@+id/saveParsleyBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="serif"
        android:gravity="center"
        android:padding="8dp"
        android:text="SAVE HERB"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="506dp" />

    <TextView
        android:id="@+id/parsleyDescription"
        android:layout_width="361dp"
        android:layout_height="89dp"
        android:layout_marginHorizontal="12dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="A bright, fresh, slightly peppery, and grassy herb used universally as both a garnish and a flavorful ingredient in everything from salads and soups to sauces and marinades."
        android:textColor="#000000"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="407dp" />

    <TextView
        android:id="@+id/parsleyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Parsley"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="359dp" />

    <TextView
        android:id="@+id/homeBtnParsley"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center|end"
        android:padding="8dp"
        android:text="HOME"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="29dp" />

    <ImageButton
        android:id="@+id/backBtnParsley"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back"
        android:padding="8dp"
        android:src="@drawable/ic_arrow_back"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/parsleyImage"
        android:layout_width="176dp"
        android:layout_height="221dp"
        app:srcCompat="@drawable/parsley"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="126dp" />
</androidx.constraintlayout.widget.ConstraintLayout>