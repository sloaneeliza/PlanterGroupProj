<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@drawable/woodbg_noscroll"
    android:padding="16dp"
    android:clipChildren="false"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/planterTitle"
        android:text="Planter"
        android:textSize="24sp"
        android:fontFamily="serif"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/planterDesc"
        android:text="Check in on your herbs."
        android:textSize="14sp"
        android:fontFamily="serif"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:id="@+id/planterList"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:clipChildren="false"
        android:clipToPadding="false"/>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:id="@+id/savedRecipesCard"
            android:layout_width="160dp"
            android:layout_height="75dp"
            android:padding="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/planter_card_bg"
            android:layout_marginEnd="12dp">

            <ImageView
                android:id="@+id/savedRecipesIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/savebox"
                android:adjustViewBounds="true"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/savedRecipesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saved Recipes"
                android:textSize="12sp"
                android:textColor="#000000"
                android:fontFamily="serif"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/addHerbCard"
            android:layout_width="160dp"
            android:layout_height="75dp"
            android:padding="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/planter_card_bg"
            android:layout_marginStart="12dp">

            <ImageView
                android:id="@+id/addHerbPot"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/pots"
                android:adjustViewBounds="true"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/addHerbText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add a new herb"
                android:textSize="12sp"
                android:textColor="#000000"
                android:fontFamily="serif"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
